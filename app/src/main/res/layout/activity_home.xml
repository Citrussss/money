<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.jby.money.ui.home.HomeModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:adapter="@{vm.adapter}"
            app:position="@={vm.currentItem}" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:contentPadding="2dp">


            <com.binding.model.view.radio.CheckRadioGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_normal_height"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="horizontal"
                app:position="@={vm.currentItem}">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/home_navigation_home"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textSize="@dimen/small_text_size" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/home_navigation_clock"
                    android:gravity="center"
                    android:text="@string/calendar"
                    android:textSize="@dimen/small_text_size" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/home_navigation_social"
                    android:gravity="center"
                    android:text="社交"

                    android:textSize="@dimen/small_text_size" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/home_navigation_mine"
                    android:gravity="center"
                    android:text="我"
                    android:textSize="@dimen/small_text_size" />
            </com.binding.model.view.radio.CheckRadioGroup>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                app:tabBackground="@color/light_blue"
                android:layout_height="@dimen/input_normal_height"
                android:orientation="horizontal">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/light_red"
                    android:text="123"
                    android:icon="@drawable/home_navigation_home" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1234"
                    android:icon="@drawable/home_navigation_clock" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1235"
                    android:icon="@drawable/home_navigation_social" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/home_navigation_mine" />
            </android.support.design.widget.TabLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>